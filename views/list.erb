<h1><%= @list.name() %></h1>

<% if @list.tasks().any?() %>
<h3>Here are all the tasks in this list:</h3>

<ul>
  <% @list.tasks().each() do |task| %>
    <li><%= task.description() %> - due <%= task.due() %> [<a href="/delete_task/<%= tasks.id()%>"</a>]</li>
  <% end %>
</ul>

<% else %>
   <p> There are no tasks on this list!</p>
<% end %>

<div class="container">
  <a href='/'><button class="btn">Home</a>
</div>

<h3><%= Add a task to <%= @list.name() %> </h3>

  <form id="list_id" name= "list_id" type="hidden" value="<%= @list.id() %>">

    <label for="description">Description of the task:</label>
    <input id="description" name="description" type="text"

    <button type = "submit">Add task</button>

  </form>

  <hr>

  <div class="container">
    <a href="/">Home</a>
    <a href="/lists">View All List</a>
    <a href="/lists/new">Add New List</a>
    <a href="/list/new">Add New Task</a>
  </div>
